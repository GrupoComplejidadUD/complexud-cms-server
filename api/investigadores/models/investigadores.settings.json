{
  "kind": "collectionType",
  "collectionName": "investigadores",
  "info": {
    "name": "Investigadores",
    "description": "Miembros y Colaboradores del Grupo Complejidad"
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "attributes": {
    "nombre": {
      "type": "string"
    },
    "apellido": {
      "type": "string"
    },
    "contacto": {
      "type": "email",
      "unique": true
    },
    "descripcion": {
      "type": "text",
      "private": true
    },
    "categoria": {
      "type": "enumeration",
      "enum": ["Profesor", "Estudiante", "Egresado", "Externo"],
      "default": "Estudiante"
    },
    "vinculacion": {
      "type": "enumeration",
      "enum": ["Miembro", "Colaborador"],
      "default": "Miembro"
    },
    "activo": {
      "type": "boolean",
      "default": true
    },
    "proyectos_dirigidos": {
      "collection": "proyectos",
      "via": "directores"
    },
    "publicaciones": {
      "collection": "publicaciones",
      "via": "autores"
    },
    "proyectos": {
      "collection": "proyectos",
      "via": "integrantes"
    },
    "ponencias": {
      "collection": "eventos",
      "via": "ponentes"
    },
    "slug": {
      "type": "uid",
      "required": true
    },
    "perfil_publico": {
      "type": "component",
      "repeatable": false,
      "component": "users.profile"
    }
  }
}
