{
  "kind": "collectionType",
  "collectionName": "eventos",
  "info": {
    "name": "Eventos",
    "description": "Diferentes tipos de eventos del grupo Complejidad"
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "attributes": {
    "nombre": {
      "type": "string",
      "unique": true
    },
    "descripcion": {
      "type": "richtext"
    },
    "fecha": {
      "type": "datetime"
    },
    "ubicacion": {
      "type": "text"
    },
    "publicidad": {
      "type": "component",
      "repeatable": false,
      "component": "eventos.publicidad"
    },
    "grabacion": {
      "type": "oembed"
    },
    "multimedia": {
      "collection": "file",
      "via": "related",
      "allowedTypes": ["images", "videos"],
      "plugin": "upload"
    },
    "ponentes": {
      "via": "ponencias",
      "collection": "investigadores",
      "dominant": true
    },
    "proyecto": {
      "via": "sustentacion",
      "model": "proyectos"
    },
    "tipo": {
      "type": "enumeration",
      "enum": ["Seminario", "Conferencia", "Charla", "Sustentacion", "Otro"],
      "default": "Seminario"
    },
    "slug": {
      "type": "uid",
      "targetField": "nombre",
      "required": true
    },
    "seo": {
      "type": "component",
      "repeatable": false,
      "component": "seo.meta-tags"
    }
  }
}
