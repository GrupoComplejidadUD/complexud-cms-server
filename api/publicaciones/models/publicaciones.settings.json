{
  "kind": "collectionType",
  "collectionName": "publicaciones",
  "info": {
    "name": "Publicaciones",
    "description": "Art√≠culos y Libros publicados del grupo complejidad"
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "attributes": {
    "titulo": {
      "type": "string",
      "unique": true
    },
    "revista": {
      "type": "text"
    },
    "fecha_publicacion": {
      "type": "date"
    },
    "identificador": {
      "type": "string",
      "unique": true
    },
    "abstract": {
      "type": "richtext"
    },
    "url_publicacion": {
      "type": "string",
      "regex": "[-a-zA-Z0-9@:%_\\+.~#?&//=]{2,256}\\.[a-z]{2,4}\\b(\\/[-a-zA-Z0-9@:%_\\+.~#?&//=]*)?"
    },
    "url_repositorio": {
      "type": "string",
      "regex": "[-a-zA-Z0-9@:%_\\+.~#?&//=]{2,256}\\.[a-z]{2,4}\\b(\\/[-a-zA-Z0-9@:%_\\+.~#?&//=]*)?"
    },
    "autores": {
      "via": "publicaciones",
      "collection": "investigadores",
      "dominant": true
    },
    "proyecto": {
      "model": "proyectos",
      "via": "publicaciones"
    },
    "slug": {
      "type": "uid",
      "targetField": "titulo",
      "required": true
    },
    "seo": {
      "type": "component",
      "repeatable": false,
      "component": "seo.meta-tags"
    }
  }
}
