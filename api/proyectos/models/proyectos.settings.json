{
  "kind": "collectionType",
  "collectionName": "proyectos",
  "info": {
    "name": "Proyectos",
    "description": "Proyectos de investigaci√≥n del Grupo Complejidad"
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "attributes": {
    "titulo": {
      "type": "string",
      "unique": true
    },
    "descripcion": {
      "type": "richtext"
    },
    "tipo": {
      "type": "enumeration",
      "enum": [
        "Investigacion",
        "Tesis_Pregrado",
        "Tesis_Maestria",
        "Tesis_Doctoral"
      ],
      "default": "Investigacion"
    },
    "estado": {
      "type": "enumeration",
      "enum": ["Iniciado", "Pausado", "Cancelado", "Finalizado"],
      "default": "Iniciado"
    },
    "fecha_inicio": {
      "type": "date"
    },
    "fecha_final": {
      "type": "date"
    },
    "lineas_de_investigacion": {
      "collection": "lineas",
      "via": "proyectos"
    },
    "directores": {
      "via": "proyectos_dirigidos",
      "collection": "investigadores",
      "dominant": true
    },
    "integrantes": {
      "via": "proyectos",
      "collection": "investigadores",
      "dominant": true
    },
    "publicaciones": {
      "via": "proyecto",
      "collection": "publicaciones"
    },
    "sustentacion": {
      "via": "proyecto",
      "model": "eventos"
    },
    "slug": {
      "type": "uid",
      "targetField": "titulo",
      "required": true
    },
    "seo": {
      "type": "component",
      "repeatable": false,
      "component": "seo.meta-tags"
    }
  }
}
